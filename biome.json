{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 180
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": {
        "all": false,
        "noUnusedVariables": "off"
      },
      "suspicious": {
        "all": false,
        "noExplicitAny": "off"
      },
      "style": {
        "all": false
      },
      "a11y": {
        "all": false
      },
      "nursery": {
        "noNestedTernary": "error",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "lodash": "Using lodash is not encouraged",
              "underscore": "Using underscore is not encouraged"
            }
          }
        },
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {
            "attributes": ["className"],
            "functions": ["cn"]
          }
        }
      },
      "performance": {
        "all": false
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "parser": {
      "allowTrailingCommas": true,
      "allowComments": true
    },
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "files": {
    "ignore": [
      "dist/**",
      "node_modules/**",
      ".next/**",
      "*.config.js",
      "*.config.mjs",
      ".turbo/**",
      ".cache/**",
      "coverage/**",
      ".storybook/**",
      "storybook-static/**",
      "**/__tests__/**",
      "**/__mocks__/**"
    ]
  }
}
